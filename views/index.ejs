<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Natsu URL Shortener</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <div class="container my-5">
        <h1 class="text-center">Natsu URL Shortener</h1>
        <form class="my-4 d-flex form-inline" action="/shortUrls" method="POST">
            <input required placeholder="Url" class="form-control  py-2 mx-4" id="fullUrl" type="url" name="fullURL">
            <button class="btn-danger align-content-center btn my-auto" type="submit">Shrink</button>
        </form>
        <table class="table table-striped table-responsive">
            <thead>
                <tr>
                    <th>Full Url</th>
                    <th>Short Url</th>
                    <th>Clicks</th>
                </tr>
            </thead>
            <tbody>

                <% ShortURLS.forEach(function(shorturl) { %>
                    <tr>
                        <td>
                            <a class="text-decoration-none" target="_blank" href="<%= shorturl.fullURL %>"><%= shorturl.fullURL %></a>
                        </td>
                        <td>
                            <a class="text-decoration-none" target="_blank" href="<%= shorturl.short %>"><%= shorturl.short %></a>
                        </td>
                        <td>
                            <%= shorturl.clicks %>
                        </td>
                    </tr>
                <% }) %>

            </tbody>
        </table>
    </div>
</body>

</html>
